= render 'mercari/header'
.mypage__l-content__clearfix
  .mypage_top__l-content
    .mypage_top__l-content__user-icon
      = link_to image_tag("https://www.mercari.com/jp/u/635675929/") do
        .mypage_top__l-content__user-icon__figure 
          = image_tag '//static.mercdn.net/images/member_photo_noimage_thumb.png', alt: '', height: '60', width: '60'
        .mypage_top__l-content__bold kunsay
        .mypage_top__l-content__number
          .mypage_top__l-content__number__left
            評価
          .mypage_top__l-content__number__right
            出品数
    .mypage_top__l-content__todo
      %ul.mypage_top__l-content__todo__list
        %li.mypage_top__l-content__todo__list__left
          = link_to do 
            お知らせ
        %li.mypage_top__l-content__todo__list__right
          = link_to do 
            やることリスト
      .mypage_top__l-content__text
